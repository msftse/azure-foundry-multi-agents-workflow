# ============================================================
# Azure OpenAI
# ============================================================
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o-mini

# ============================================================
# Azure AI Foundry — required for pipeline/publish.py deployment
# ============================================================
AZURE_AI_PROJECT_ENDPOINT=https://<your-resource>.services.ai.azure.com/api/projects/<your-project>
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_RESOURCE_GROUP=<your-resource-group>
# Resource group where the Foundry project lives (may differ from AZURE_RESOURCE_GROUP)
AZURE_AI_RESOURCE_GROUP=<your-foundry-resource-group>
AZURE_AI_PROJECT_NAME=<your-project-name>
# AZURE_ACCOUNT_NAME is auto-derived from the endpoint if not set
# AZURE_ACCOUNT_NAME=<your-account-name>

# ============================================================
# Jira MCP Server (APIM-hosted, SSE transport)
# ============================================================
JIRA_MCP_SSE_URL=https://<your-apim>.azure-api.net/jira-mcp-1/sse

# ============================================================
# Slack MCP Server (APIM-hosted, SSE transport)
# ============================================================
SLACK_MCP_SSE_URL=https://<your-apim>.azure-api.net/slack-mcp-1/sse

# ============================================================
# GitHub MCP Server (remote — GitHub Copilot MCP endpoint)
# ============================================================
GITHUB_PERSONAL_ACCESS_TOKEN=<your-github-pat>
GITHUB_MCP_URL=https://api.githubcopilot.com/mcp/

# ============================================================
# Workflow
# ============================================================
WORKFLOW_MAX_ROUNDS=10
